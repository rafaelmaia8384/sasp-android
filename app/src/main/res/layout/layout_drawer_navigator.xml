<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_perfil_usuario" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="Opções"
            android:textColor="@color/colorAccent"
            android:textSize="12sp" />

        <Button
            android:id="@+id/buttonConfiguracoes"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/background_button"
            android:textColor="@color/colorWhite"
            android:clickable="true"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:layout_gravity="start"
            android:textAlignment="textStart"
            android:layout_marginBottom="10dp"
            android:text="    Configurações" />

        <Button
            android:id="@+id/buttonInformacoes"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/background_button"
            android:textColor="@color/colorWhite"
            android:clickable="true"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:layout_gravity="start"
            android:textAlignment="textStart"
            android:layout_marginBottom="10dp"
            android:text="    Informações do sistema" />

        <Button
            android:id="@+id/buttonDesconectar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/background_button"
            android:textColor="@color/colorWhite"
            android:clickable="true"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:layout_gravity="start"
            android:textAlignment="textStart"
            android:text="    Desconectar e sair" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutAcoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="Acesso restrito"
            android:textColor="@color/colorAccent"
            android:textSize="12sp" />

        <Button
            android:id="@+id/buttonAcoesVerUsuarios"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/background_button"
            android:textColor="@color/colorWhite"
            android:clickable="true"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:layout_gravity="start"
            android:textAlignment="textStart"
            android:layout_marginBottom="10dp"
            android:text="    Ver usuários do sistema" />

        <Button
            android:id="@+id/buttonAcoesAnalisarSolicitacoesDeAcesso"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/background_button"
            android:textColor="@color/colorWhite"
            android:clickable="true"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:layout_gravity="start"
            android:textAlignment="textStart"
            android:layout_marginBottom="10dp"
            android:text="    Analisar solicitações de acesso" />

        <Button
            android:id="@+id/buttonAcoesEmitirAlerta"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/background_button"
            android:textColor="@color/colorWhite"
            android:clickable="true"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:layout_gravity="start"
            android:textAlignment="textStart"
            android:layout_marginBottom="10dp"
            android:text="    Emitir alertas aos usuários" />

        <Button
            android:id="@+id/buttonAcoesVerInfomes"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/background_button"
            android:textColor="@color/colorWhite"
            android:clickable="true"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:layout_gravity="start"
            android:textAlignment="textStart"
            android:layout_marginBottom="10dp"
            android:text="    Ver informes enviados ao SASP" />

    </LinearLayout>

</LinearLayout>
