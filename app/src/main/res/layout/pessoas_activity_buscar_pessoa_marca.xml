<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="30dp"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:animateLayoutChanges="true"
    tools:context="br.gov.pb.pm.sasp.PessoasBuscarPessoaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:layout_centerVertical="true"
        android:paddingBottom="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?android:attr/actionBarSize"
            android:background="@color/colorPrimary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buscar pessoa"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/icon_close"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:onClick="fecharJanela"/>

        </RelativeLayout>

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:ms_background_color="http://schemas.android.com/tools">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <Spinner
                    android:id="@+id/spinnerTipoMarca"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="50"
                    android:theme="@style/spinnerItemStyle"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:background="@drawable/background_spinner"
                    android:entries="@array/marca_corporal_tipo" />

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/layoutMarcaTatuagem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:text="Tipo de tatuagem:"/>

                    <EditText
                        android:id="@+id/editTextTipoTatuagem"
                        android:textSize="12sp"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:background="@drawable/background_edittext"
                        android:inputType="textCapWords"
                        android:ems="10"
                        android:hint="Palhaço, tribal, palavra, etc." />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="Selecione a parte do corpo:"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:id="@+id/radioGroup"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:background="@color/colorGray">

                        <RadioButton
                            android:id="@+id/radio1"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="0dp"
                            android:layout_marginLeft="5dp"
                            android:text="Cabeça e pescoço"/>

                        <View android:layout_height="1dp"
                            android:layout_width="match_parent"
                            android:background="@color/colorWhite"></View>

                        <RadioButton
                            android:id="@+id/radio2"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="0dp"
                            android:layout_marginLeft="5dp"
                            android:text="Membros superiores"/>

                        <View android:layout_height="1dp"
                            android:layout_width="match_parent"
                            android:background="@color/colorWhite"></View>

                        <RadioButton
                            android:id="@+id/radio3"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="0dp"
                            android:layout_marginLeft="5dp"
                            android:text="Tronco"/>

                        <View android:layout_height="1dp"
                            android:layout_width="match_parent"
                            android:background="@color/colorWhite"></View>

                        <RadioButton
                            android:id="@+id/radio4"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="0dp"
                            android:layout_marginLeft="5dp"
                            android:text="Membros inferiores"/>

                    </RadioGroup>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_repeat">

                        <ImageView
                            android:id="@+id/imgParteNenhum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@drawable/parte_nenhum" />

                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/imgCabecaPescoco"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@drawable/parte_cabeca_pescoco" />

                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/imgMembroSuperior"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@drawable/parte_membros_superiores" />

                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/imgTronco"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@drawable/parte_tronco" />

                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/imgMembroInferior"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@drawable/parte_membros_inferiores" />


                    </RelativeLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/buttonBuscar"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/background_button"
                    android:textColor="@color/colorWhite"
                    android:clickable="true"
                    android:onClick="buttonBuscar"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:text="Buscar" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>
